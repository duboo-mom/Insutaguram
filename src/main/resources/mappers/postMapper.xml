<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.duboomom.insutaguram.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `content`
			, `location`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{content}
			, #{location}
			, #{imagePath}
			, now()
			, now()
		)
	
	</insert>
	
	<select id="selectPostList" resultType="com.duboomom.insutaguram.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `content`
			, `location`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
	</select>

</mapper>